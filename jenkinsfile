pipeline{
	agent any

        stages{
            stage("Compile"){
                steps{
                    withMaven(maven : 'Maven'){
                        sh 'mvn clean compile'
                    }
                }
            }

            stage("Unit Testing"){
                steps{
                    withMaven(maven : 'Maven'){
                        sh 'mvn test jacoco:report'
                    }
                }
            }

            /*
            stage("Run API"){
                steps{
                    sh 'mvn spring-boot:run'
                }
            }*/

            stage("Jmeter Testing"){
                parallel{
                    stage("Run API"){
                        steps{
                            sh 'mvn spring-boot:run'
                        }
                    }
                    stage("Jmeter Test"){
                        steps{
                            sleep(5)
                            sh 'mvn jmeter -n -t /home/lio/Documents/Work/MS3/TrackMAPI/src/test/jmeter/trackmapi-testplan-new.jmx -l /home/lio/Documents/Work/MS3/TrackMAPI/src/test/jmeter/results.jtl'
                        }
                    }
                }
            }
        }

    /*
        stages{
            stage("Build jar file"){
                steps{
                    withMaven(maven: 'Maven'){
                        sh 'mvn clean package'
                    }
                }
            }

            stage("Build app docker image"){
                steps{
                    sh 'docker build -t trackmapi:1.0 .'
                }
            }

            stage("Run springboot and mongodb containers"){
                steps{
                    dir('src/main/resources/'){
                        sh 'docker-compose up'
                    }
                }
            }
        }
    */


	/*
